@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-right">

            <a asp-action="Upsert" class="btn btn-success">
                <i class="fas fa-plus "></i> &nbsp;Create new product
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Product name
                    </th>
                    <th class="text-center">
                        price
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%" class="text-center">@item.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id"
                                   asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-route-Id="@item.Id"
                                   asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> List of products is empty! </p>
    }


</div>


