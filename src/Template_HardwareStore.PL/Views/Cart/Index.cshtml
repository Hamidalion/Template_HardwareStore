@model IEnumerable<Product>

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light">
                        <div class="row">
                            <div class="col-6 mt-1">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Shopping Cart
                            </div>
                            <div class="col-6 text-end">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-12 col-lg-3">
                                        Product Details
                                    </div>
                                }
                                else
                                {
                                    <div class="col-12 col-lg-7">
                                        Product Details
                                    </div>
                                }
                                <div class="col-12 col-lg-2">
                                    Price per sqft
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-6 col-lg-2">
                                       Sqft
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        Total Price
                                    </div>
                                }
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />

                        @{ 
                            var orderTotal = 0.0;
                        }

                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                 <div class="row h-100">
                                     <div class="col-4 col-md-2 text-center py-2">
                                         <img src="@WebConstants.IamgePath@item.Image" class="rounded" width="100%" />
                                     </div>
                                     @if (User.IsInRole(WebConstants.AdminRole))
                                     {
                                         <div class="col-8 col-lg-3">
                                             <h5>@item.Name</h5>
                                             <div style="font-size:11px;">@item.ShortDesc</div>
                                         </div>
                                     }
                                     else
                                     {
                                         <div class="col-8 col-lg-7">
                                             <h5>@item.Name</h5>
                                             <div style="font-size:11px;">@item.ShortDesc</div>
                                         </div>
                                     }
                                     <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                         <span style="font-size:17px;"> @item.Price</span>/ sqft
                                     </div>
                                 
                                     @if (User.IsInRole(WebConstants.AdminRole))
                                     {
                                         <div class="col-4 col-lg-2 pt-lg-4" style="font-size:11px;">
                                             <input type="text" asp-for="@item.TempSqFt" class="form-control" />
                                         </div>
                                         <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                             <span style="font-size:17px;"> $@(item.Price*item.TempSqFt)</span>
                                         </div>
                                     }
                                 
                                     <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                         <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                             <i class="fas fa-trash"></i>
                                         </a>
                                     </div>
                                 </div>

                                orderTotal += @item.Price * item.TempSqFt;
                            }
                        }
                        else
                        {
                            <p>Shop list is  empty.</p>
                        }
                        <hr />

                        @if (User.IsInRole(WebConstants.AdminRole))
                        {
                            <div class="row">
                                <div class="col-12 text-right pr-4" style="color:#821f3d" >
                                    Order Total: @String.Format("{0:c}", orderTotal)
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <div class="row ">
                            <div class="col-6 col-md-3 offset-md-9 mt-3">
                                <button type="submit" class="btn btn-success form-control">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>