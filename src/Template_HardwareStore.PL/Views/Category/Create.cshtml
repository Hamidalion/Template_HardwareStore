@model Template_HardwareStore.Entities.Models.Category

<form method="post" asp-controller="Category" asp-action="Create">
    <div class="border p-3 bg-white">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Add Category
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row py-2">

                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-success w-100" /> 
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                Back &nbsp;
                                <i class="fas fa-step-backward"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
            
    </div>
</form>

@section Scripts{ 

    @{<partial name="_ValidationScriptsPartial" /> }
    
}

