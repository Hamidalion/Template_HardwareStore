@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-right">
            
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus "></i> &nbsp;Create New category</a>
        </div>
    </div>
    <br /><br />

    @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="width:100%" >
            <thead>
                <tr>
                    <th class="text-center">
                        Category Name
                    </th>
                    <th class="text-center">
                        Display Order 
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%" class="text-center">@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@item.Id"
                                   asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-controller="Category" asp-route-Id="@item.Id"
                                   asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> List of categories is empty! </p>
    }


</div>


